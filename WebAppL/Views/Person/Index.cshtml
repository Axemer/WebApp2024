@model WebAppL.Models.PersonModel

@{
    ViewData["Title"] = "Person";
}

<h1>Person</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Person">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Фамилия</label>
                <input type="text" name="Surname" class="form-control"></input>

                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input type="text" name="name" class="form-control" /></input>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MidName" class="control-label">Отчество</label>
                <input type="text" name="midname" class="form-control"></input>
                <span asp-validation-for="MidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group" class="control-label">Группа</label>
                <input type="text" name="group" class="form-control"></input>
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelNum" class="control-label">Номер телефона</label>
                <input type="text" name="num" class="form-control"></input>
                <span asp-validation-for="TelNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Электронная почта</label>
                <input type="text" name="email" class="form-control"></input>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit">ADD</button>
            </div>
            <div class="form-group">
                <label class="control-label">@ViewBag.Person</label>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>