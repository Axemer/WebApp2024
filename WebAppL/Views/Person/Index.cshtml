@model PersonModel

@{
    ViewData["Title"] = "Person";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
        border: 1px solid #ddd;
        text-align: center;
    }
    .{
        background-color:black;
    }
    
</style>

<h1>Person</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Person">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Фамилия</label>
                <input asp-for="Surname" type="text" class="form-control" required>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" type="text" class="form-control" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MidName" class="control-label">Отчество</label>
                <input asp-for="MidName" type="text" class="form-control">
                <span asp-validation-for="MidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group" class="control-label">Группа</label>
                <input asp-for="Group" type="text" class="form-control" required>
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelNum" class="control-label">Номер телефона</label>
                <input asp-for="TelNum" type="text" class="form-control" required>
                <span asp-validation-for="TelNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Электронная почта</label>
                <input asp-for="Email" type="text" class="form-control" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit">ADD</button>
            </div>
        </form>


        
       
        <h1>-</h1>
            @{ var i = "";}
            @foreach (var item in ViewBag.PersonList)
            {
                if(item.Group != i)
                {
                    i = item.Group;
                    <h3>Группа: @item.Group</h3>
                    <table>
                        <thead>
                            <tr>
                                <th> Фамилия </th>
                                <th> Имя </th>
                                <th> Отчество </th>
                                <th> Телефон </th>
                                <th> E-mail </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var student in ViewBag.PersonList)
                            {
                                if (student.Group == item.Group)
                                {
                                    <tr>
                                        <td> @student.Surname  </td>
                                        <td> @student.Name  </td>
                                        <td> @student.MidName  </td>
                                        <td> @student.TelNum  </td>
                                        <td> @student.Email  </td>
                                    </tr>
                                }
                            }
                        </tbody>
                </table>
                }
            }

            @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
            }
    </div>
</div>