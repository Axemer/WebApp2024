@model PersonModel

@{
    ViewData["Title"] = "Person";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
        border: 1px solid #ddd;
        text-align: center;
    }
    .{
        background-color:black;
    }
    
</style>

<h1>Person</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Person">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Фамилия</label>
                <input type="text" name="Surname" class="form-control"></input>

                <span asp-validation-for="@Model.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label">Имя</label>
                <input type="text" name="name" class="form-control" /></input>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.MidName" class="control-label">Отчество</label>
                <input type="text" name="midname" class="form-control"></input>
                <span asp-validation-for="@Model.MidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Group" class="control-label">Группа</label>
                <input type="text" name="group" class="form-control"></input>
                <span asp-validation-for="@Model.Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TelNum" class="control-label">Номер телефона</label>
                <input type="text" name="num" class="form-control"></input>
                <span asp-validation-for="@Model.TelNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label">Электронная почта</label>
                <input type="text" name="email" class="form-control"></input>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit">ADD</button>
            </div>
            
        </form>
       
        <h1>Народ</h1>
            <h3>Группа </h3>
            <table>
                <thead>
                    <tr>
                        <th> Фамилия </th>
                        <th> Имя </th>
                        <th> Отчество </th>
                        <th> Группа </th>
                        <th> Телефон </th>
                        <th> E-mail </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in ViewBag.PersonList)
                    {
                    <tr>
                            <td> @student.Surname  </td>
                            <td> @student.Name  </td>
                            <td> @student.MidName  </td>
                            <td> @student.Group  </td>
                            <td> @student.TelNum  </td>
                            <td> @student.Email  </td>
                    </tr>
                    }
                </tbody>
            </table>
        
